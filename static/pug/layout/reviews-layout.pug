ul.reviews__list
  each review in reviews
    li.reviews__item
      .reviews__wrapper
        .reviews__info
          .reviews__box-images
            img.reviews__img(src=`${review.img}` alt='Фото автора отзыва' width='80' height='80')
          .reviews__box
            h3.reviews__name #{review.name}
            if review.gender === 'male'
              p.reviews__count Купил #{review.count} книг
            else if review.gender === 'female'
              p.reviews__count Купилa #{review.count} книг
            else
              p.reviews__count Купил(a) #{review.count} книг
        p.reviews__review #{review.review}
